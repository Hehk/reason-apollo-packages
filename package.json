{
	"devDependencies": {
		"bs-platform": "^2.2.2",
		"husky": "^0.15.0-rc.8",
		"lerna": "^3.0.0-alpha.1",
		"lint-staged": "^7.0.0",
		"prettier": "^1.11.0"
	},
	"lint-staged": {
		"*.{re,rei}": [
			"refmt --in-place",
			"git add"
		],
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
